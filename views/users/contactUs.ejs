<% layout("layouts/boilierplate") %>
    <link rel="stylesheet" href="/stylesheets/contactUs.css">
    <div class="contact-us-container">
        <h1>Contact Us</h1>

        <p>If you have any questions or need assistance, please reach out to us. Our team is ready to help you with
            any
            banking needs.</p>

        <div class="contact-methods">
            <section class="contact-form">
                <h2>Send Us a Message</h2>
                <form action="/accountViews/send-message" method="post">
                    <label for="name">Your Name:</label>
                    <input type="text" id="name" name="name" pattern="^[A-Za-z\s]+$" minlength="3" maxlength="45"
                        required>


                    <label for="email">Your Email:</label>
                    <input type="email" id="email" name="email" required>

                    <label for="message">Your Message:</label>
                    <textarea id="message" name="message" rows="6" maxlength="500" required></textarea>

                    <button type="submit" class="btn btn-success">Send Message</button>
                </form>
            </section>

            <section class="other-contacts">
                <h2>Other Ways to Reach Us</h2>
                <p><strong>Phone:</strong> 1-800-BANKAPP</p>
                <p><strong>Email:</strong> support@bankapp.com</p>
                <p><strong>Address:</strong> 123 Finance Street, Money City, MC 12345</p>
            </section>
        </div>
    </div>